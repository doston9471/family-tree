<div id="<%= dom_id person %>" class="my-5 space-y-5">
  <strong class="block font-medium mb-1">
    <%= sanitize person.display_name %>
    <span class="px-3 py-1 text-sm rounded-full shrink-0 ml-2 <%= person.gender == 'male' ? 'bg-blue-100 text-blue-800' : 'bg-pink-100 text-pink-800' %>">
      <%= person.gender.capitalize %>
    </span>
  </strong>

  <div>
    <strong class="block font-medium mb-2">Ancestors Tree:</strong>
    <div class="bg-gray-50 rounded-lg p-4 overflow-x-auto">
      <code class="block whitespace-pre font-mono text-sm"><%= @ancestors_tree %></code>
    </div>
  </div>

  <div>
    <strong class="block font-medium mb-2">Descendants Tree:</strong>
    <div class="bg-gray-50 rounded-lg p-4 overflow-x-auto">
      <code class="block whitespace-pre font-mono text-sm"><%= @descendants_tree %></code>
    </div>
  </div>
</div>
